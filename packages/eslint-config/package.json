{
   "name": "@webdivision/eslint-config",
   "version": "0.0.10",
   "description": "ESLint and Prettier Config from WebDivision",
   "keywords": [
      "javascript",
      "ecmascript",
      "eslint",
      "lint",
      "config",
      "prettier"
   ],
   "main": "index.js",
   "publishConfig": {
      "access": "public"
   },
   "repository": "git@github.com:webdivisionhq/eslint-config-webdivision.git",
   "author": "Konrad Turczy≈Ñski <konrad@turczynski.dev>",
   "license": "MIT",
   "dependencies": {
      "babel-plugin-module-resolver": "^3.2.0",
      "eslint": ">=5",
      "eslint-config-kentcdodds": "^14.3.2",
      "eslint-config-prettier": "^4.2.0",
      "eslint-plugin-prettier": "^3.0.1",
      "prettier": "^1.17.0"
   },
   "scripts": {
      "format": "prettier --write '**/*.js'",
      "lint": "eslint 'src/**/*.{js,jsx}'",
      "lint:fix": "eslint --fix 'src/**/*.{js,jsx}'"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged"
      }
   },
   "lint-staged": {
      "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
         "prettier --write",
         "git add"
      ],
      "src/**/*.{js,jsx}": [
         "eslint",
         "git add"
      ]
   }
}
